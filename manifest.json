{
  "manifest_version": 2,
  "name": "getBBRecord",
  "short_name": "getBBRecord",
  "description": "getBBRecord",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "/img/48x48.png",
    "default_popup": "html/popup.html",
    "default_title": "getBBRecord"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "js/jquery.min.js",
        "js/strutil.js",
        "js/download.js",
        "js/writeData.js",
        "js/cookie.js",

        "/js/getBBQuestions.js",
        "/js/getBBScore.js",
        "/js/putAns.js",
        "js/content.js"

      ],

      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": true,
      "run_at": "document_idle"

      

    }
  ],
  "minimum_chrome_version": "49.0",
  "permissions": [
    "http://*/*",
    "webRequest",
    "webRequestBlocking",
    "file://*",
    "*://bb.zucc.edu.cn/*",
    "storage",
    "tabs",
    "cookies",
    "<all_urls>",
    "https://www.icourse163.org/*"
  ]
}
